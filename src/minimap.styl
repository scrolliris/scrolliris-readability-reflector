// container
#scrolliris_minimap_container
  width 242px !important
  height 325px !important
  margin 0 auto 0 3px
  overflow hidden

#scrolliris_header,
#scrolliris_footer
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", sans-serif
  font-size 1.02em
  vertical-align middle
  padding 3px 3px
  background-color white
  color darken(#888888, 13%)

// header
#scrolliris_header
  text-align left
  height 22px
  border-bottom 1px solid #d3d3d3
  min-height 32px

#scrolliris_header
  h1
    display inline-block
    margin 0
    padding 8px 0 0 5px
    font-family monospace
    font-size 1.12em
    text-align left
  h1 > span.label
    font-family monospace
    margin 0
    font-size 0.783em
    text-align center
    border 1px solid #e8e8e8
    background-color #e8e8e8
    display inline-block
    padding 3px 4px
    margin 0 6px
  .btn
    border none
    background none
    float right
    &.close
      font-family monospace
      font-size 1.88em
      color #888888
      margin 0 7px 0 0
      padding 2px

// footer
#scrolliris_footer
  text-align center
  height 23px
  border-top 1px solid #d3d3d3
  background-color #ffffff

#scrolliris_footer
  .txt
    font-size 70%
    color darken(darkgray, 28%)
    margin 7px 0 5px 0
    padding 0

// main
#scrolliris_minimap
  margin 0
  padding 0
  cursor grab
